<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
                <shape
                    android:dither="true"
                    android:shape="oval"
                    android:useLevel="false"
                    android:visible="true">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/white"
                        android:startColor="@color/white"/>
                    <corners
                        android:radius="15dp"/>
                    <size
                        android:width="18dp"
                        android:height="18dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>