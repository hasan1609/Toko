<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.UpdatePasswordActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/custom_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_bar"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="20dp"
                    android:text="Masukkan Password Anda"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_current_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_edttext"
                    android:hint="Password saat ini"
                    android:inputType="textPassword"
                    android:minHeight="60dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:drawableEnd="@drawable/ic_eye_show"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="20dp"
                    android:text="Masukkan Password Baru"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_edttext"
                    android:hint="Password Baru"
                    android:inputType="textPassword"
                    android:minHeight="60dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:drawableEnd="@drawable/ic_eye_show"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="20dp"
                    android:text="Konfirmasi Password Baru"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_cek_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_edttext"
                    android:hint="Konfirmasi Password"
                    android:inputType="textPassword"
                    android:minHeight="60dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:drawableEnd="@drawable/ic_eye_show"/>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/rounded_button"
            android:backgroundTintMode="@color/primary_color"
            android:text="Simpan" />
    </RelativeLayout>
</layout>